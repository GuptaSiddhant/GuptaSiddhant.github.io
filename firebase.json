{
  "functions": {
    "predeploy": "npm run build",
    "source": ".",
    "ignore": [
      "**/.*",
      "**/app/**",
      "**/node_modules/**",
      "**/public/**",
      "firebase.json",
      "tailwind.*",
      "remix.*"
    ]
  },
  "hosting": {
    "public": "public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**", "/build/**"],
    "rewrites": [
      {
        "source": "**",
        "function": "app"
      }
    ]
  },
  "emulators": {
    "hosting": {
      "port": 3000
    },
    "functions": {
      "port": 5001
    },
    "ui": {
      "enabled": true
    }
  }
}
