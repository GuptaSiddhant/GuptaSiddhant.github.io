{
  "private": true,
  "name": "guptasiddhant-com",
  "description": "Personal website of Siddhant Gupta, build with Remix.",
  "license": "",
  "scripts": {
    "build": "remix build",
    "postinstall": "remix setup node",
    "prebuild": "tailwindcss -o ./app/styles/tailwind.css",
    "dev": "concurrently \"remix dev\" \"npm:dev:css\"",
    "dev:css": "tailwindcss -w -o ./app/styles/tailwind.css",
    "clear": "rm -rf api/_build; rm -rf public/build; rm -rf .cache/"
  },
  "dependencies": {
    "@remix-run/react": "^1.1.3",
    "@remix-run/serve": "^1.1.3",
    "@remix-run/vercel": "^1.1.3",
    "clsx": "^1.1.1",
    "firebase": "^9.6.2",
    "mdx-bundler": "^9.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "remix": "^1.1.3",
    "remixicon-react": "^1.0.0"
  },
  "devDependencies": {
    "@remix-run/dev": "^1.1.3",
    "@tailwindcss/forms": "^0.4.0",
    "@tailwindcss/typography": "^0.5.0",
    "@types/react": "^17.0.24",
    "@types/react-dom": "^17.0.9",
    "@types/tailwindcss": "^2.2.4",
    "autoprefixer": "^10.0.2",
    "concurrently": "^6.4.0",
    "eslint": "^8.3.0",
    "postcss": "^8.0.9",
    "prettier": "^2.5.1",
    "tailwindcss": "^3.0.0",
    "typescript": "^4.1.2"
  },
  "sideEffects": false,
  "prettier": {
    "trailingComma": "all",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": false,
    "arrowParens": "always",
    "printWidth": 80
  }
}
